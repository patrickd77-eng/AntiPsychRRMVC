@model IEnumerable<AntiPsychRRMVC2.Models.Drug>

@{
    ViewData["Title"] = "AntiPsych Ready Reckoner";
}

<h1>Drug List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DrugName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DrugRoute)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DrugFrequency)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DrugMaxDose)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DrugName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DrugRoute)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DrugFrequency)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DrugMaxDose)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.DrugId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.DrugId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>