@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <a asp-action="Index" asp-controller="Drugs" class="btn btn-primary btn-lg m-auto p-5">Go to Drug List -></a>
    <a asp-action="Index" asp-controller="GoToAccount" class="btn btn-secondary btn-lg m-auto p-5">Go to My Account -></a>
</div>
<div>
    <hr />
    <h2>Max Dose Checker</h2>
    <form>
        <label class="form-label" for="drugSelect">Select a drug: </label>
        <select id="drug" class="form-select form-control" value="Choose a drug..." aria-label="Default select example">
            <option value="1">One</option>
        </select>
        <label class="form-label" for="dose">Enter current dose: </label>
        <input id="dose" type="number" class="form-control-plaintext border" placeholder="100.00" />
        <button onclick="addToDrugList()" type="submit" class="btn btn-success mt-1">Add this drug</button>
        <button onclick="reset()" type="submit" class="btn btn-secondary mt-1">Reset page</button>
    </form>
    <hr />
    <div>
        <h3>Overall Max Dose Utilisation:</h3>
        <div class="alert-info alert mx-auto text-center" style="font-size:150%;font-weight:bold;">
            X%
        </div>
        <h3>Drugs counted:</h3>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Drug</th>
                    <th scope="col">Frequency</th>
                    <th scope="col">Route</th>
                    <th scope="col">BNF maximum dose</th>
                    <th scope="col">Dose given</th>
                    <th scope="col">Percentage of max dose given</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>%</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>